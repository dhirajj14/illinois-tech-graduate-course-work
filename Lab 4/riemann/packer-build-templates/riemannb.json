{
  "builders": [{
      "name": "riemannb",
        "type": "virtualbox-iso",
        "guest_os_type": "RedHat_64",
        "guest_additions_mode": "disable",
    "iso_url": "http://mirror.dal10.us.leaseweb.net/centos/7.7.1908/isos/x86_64/CentOS-7-x86_64-Minimal-1908.iso",
    "iso_checksum": "9a2c47d97b9975452f7d582264e9fc16d108ed8252ac6816239a3b58cef5c53d",
    "iso_checksum_type": "sha256",
    "vm_name": "riemannb",
    "http_directory" : ".",
    "http_port_min" : 9001,
    "http_port_max" : 9001,
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "30m",
    "communicator": "ssh", 
    "ssh_pty": "true", 
    "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now", 
    "hard_drive_interface": "sata",
    "disk_size": 20000,
    "boot_wait": "5s",
    "boot_command": [
        "<up><wait><tab><wait> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks/centos-7-base.cfg<enter><wait>"
    ],"vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "2048"
        ]  
    ]
  }],

  "provisioners": [
    {
      "type": "file",
      "source": "../configs",
      "destination": "/tmp/"
    },
    {
    "type": "shell",
  "execute_command" : "echo 'vagrant' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'", 
    "script": "../scripts/install_riemannb.sh"
  }
 
],
  "post-processors": [
 {
  "type": "vagrant",
 "keep_input_artifact": false,
 "output": "../build/{{.BuildName}}-{{.Provider}}-{{timestamp}}.box"  
 }
]
}
